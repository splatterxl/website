---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 1em;
  }

  @media (max-width: 500px) {
      header {
          flex-direction: column;
          justify-content: center;
          align-items: center;
      }
  }
</style>

<header>
  <Logo />
  <Nav current={current} />
</header>